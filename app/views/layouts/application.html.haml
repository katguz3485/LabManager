!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : ENV['APP_NAME']
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Lab Manager'}"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    = favicon_link_tag asset_path('favicon.ico'), :rel => 'icon', :type => "image/x-icon"
    %header
      = render 'layouts/shared/navigation'
      .container-fluid
        .row
          .col-md-12
            = breadcrumbs style: :bootstrap, separator: "&raquo;"
    %main{:role => "main"}
      = render 'layouts/shared/messages'
      .container
        .row
          .col-xs-10.col-xs-offset-1
            = yield
    = render 'layouts/shared/footer'
