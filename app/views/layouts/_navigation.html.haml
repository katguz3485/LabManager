%nav.navbar-default.navbar-fixed-top
  .container-fluid
    .navbar-header
      %button.navbar-toggle{"aria-controls" => "navbar", "aria-expanded" => "true", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "LAB MANAGER", root_path, class: 'navbar-brand'
    #navbar.navbar-collapse.collapse
      %ul.nav.navbar-nav.navbar-center
        %li
          = link_to t('navbar.chemicals_search'), root_path
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          .dropdown.show
            %a#dropdown-menu-link.btn.btn-secondary.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              = current_user.email
            .dropdown-menu.dropdown-menu-left{"aria-labelledby" => "dropdown-menu-link"}
              = link_to t('navbar.logout'), destroy_user_session_path, method: :delete, class: 'dropdown-item'
        - else
          %li.nav-item
            = link_to t('navbar.signin'), new_user_session_path, class: 'nav-link'
          %li.nav-item
            = link_to t('navbar.signup'), new_user_registration_path, class: 'nav-link'
