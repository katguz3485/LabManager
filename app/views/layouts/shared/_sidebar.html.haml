.card.border-secondary.mb-3{:style => "max-width: 15rem;"}
  .card-header Control Panel
  .card-body
    %table.table.table-condensed
      %tr
        %td
        .row.pull-right
          = link_to new_category_chemical_path(@chemical.category_id, @chemical), { title: t('shared.edit') } do
            %button.btn.btn-outline-success.btn_margin
              = fa_icon "plus"
          = link_to edit_category_chemical_path(@chemical.category_id, @chemical), {title: "edit"} do
            %button.btn.btn-outline-warning.btn_margin
              = fa_icon "edit"
          = link_to category_chemical_path(@chemical.category_id,@chemical), { method: :delete, title: "delete"} do
            %button.btn.btn-outline-danger.btn_margin
              = fa_icon "trash"
    .col-md-10.btn_margin
      = link_to t('chemical.columns.new_category'), new_category_path, class: 'btn btn-secondary'
    .col-md-10.btn_margin
      = link_to t('chemical.columns.new_chemical'), new_category_chemical_path(category_id: @category.id), class: 'btn btn-secondary'
    .col-md-10.btn_margin
      = link_to t('chemical.columns.new_item'), new_chemical_item_path(@chemical, @item), class: 'btn btn-secondary'