%nav.navbar-default.navbar-fixed-top
  .container-fluid
    .navbar-header
      %button.navbar-toggle{"aria-controls" => "navbar", "aria-expanded" => "true", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only
        %span.icon-bar
        = link_to t('navbar.app_name'), root_path, class: 'navbar-brand'
    #navbar.navbar-collapse.collapse
    %ul.nav.navbar-nav.navbar-right
      - if user_signed_in?
        %li= link_to t('navbar.chemicals_search'), root_path
      - if user_signed_in?
        %li= link_to t('navbar.my_account'), edit_user_registration_path
        %li= link_to t('navbar.logout'), destroy_user_session_path, method: :delete
      - else
        %li= link_to t('navbar.signin'), new_user_session_path
        %li= link_to t('navbar.signup'), new_user_registration_path


